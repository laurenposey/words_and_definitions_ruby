<div>
  <h1><%= @words.word_name() %></h1>
  <h3>Here are all the word_meanings in this word:</h3>

  <ul>
    <% @word.word_meanings().each() do |word_meaning| %>
      <li><a href="/definitions/<%= word_meaning.id() %>"><%= word_meaning.add_definition() %></a></li>
    <% end %>
  </ul>

  <a href="/words/<%= @word.id%>/definitions/new">Add a new definition</a>
  <a href="/">Return to Main Page</a>
</div>
